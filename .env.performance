# Performance Optimized Configuration for Dino E-Menu API
# This configuration disables heavy features to improve response times

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# SECURITY (CHANGE IN PRODUCTION!)
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production-at-least-32-characters-long
QR_ENCRYPTION_KEY=dino-qr-encryption-key-change-in-production-32-chars

# =============================================================================
# GOOGLE CLOUD PLATFORM
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
DATABASE_NAME=(default)
GCS_BUCKET_NAME=your-gcs-bucket-name

# =============================================================================
# FEATURE FLAGS - PERFORMANCE OPTIMIZED
# =============================================================================

# Core features (keep enabled for basic functionality)
ENABLE_CORS=true
ENABLE_DATA_VALIDATION=true
ENABLE_PUBLIC_ORDERING=true
ENABLE_QR_CODE_GENERATION=true

# DISABLE HEAVY MONITORING FEATURES (major performance impact)
ENABLE_MONITORING=false
ENABLE_MONITORING_MIDDLEWARE=false
ENABLE_MONITORING_ENDPOINTS=false
ENABLE_PROMETHEUS_METRICS=false
ENABLE_SECURITY_MONITORING=false

# DISABLE HEAVY LOGGING FEATURES (major performance impact)
ENABLE_REQUEST_LOGGING=false
ENABLE_DATABASE_LOGGING=false
ENABLE_BUSINESS_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=false

# DISABLE REAL-TIME FEATURES (moderate performance impact)
ENABLE_WEBSOCKET=false
ENABLE_WEBSOCKET_ENDPOINTS=false
ENABLE_REAL_TIME_NOTIFICATIONS=false
ENABLE_LIVE_ORDER_UPDATES=false
ENABLE_LIVE_TABLE_UPDATES=false

# DISABLE HEAVY VALIDATION (moderate performance impact)
ENABLE_VALIDATION_MIDDLEWARE=false
ENABLE_BUSINESS_VALIDATION=false
ENABLE_VALIDATION_ENDPOINTS=false

# DISABLE ANALYTICS (major performance impact - database heavy)
ENABLE_DASHBOARD_ANALYTICS=false
ENABLE_DASHBOARD_ENDPOINTS=false
ENABLE_BUSINESS_METRICS=false
ENABLE_ANALYTICS_COLLECTION=false

# DISABLE FILE PROCESSING (moderate performance impact)
ENABLE_STORAGE_SERVICE=false
ENABLE_FILE_UPLOADS=false
ENABLE_IMAGE_PROCESSING=false

# DISABLE NOTIFICATIONS (light performance impact)
ENABLE_NOTIFICATION_SERVICE=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# DISABLE ADVANCED FEATURES (moderate performance impact)
ENABLE_TRANSACTION_SERVICE=false
ENABLE_QR_ENCRYPTION=false
ENABLE_WORKSPACE_ONBOARDING=false
ENABLE_ROLE_PERMISSION_SYSTEM=false

# Enable development tools for debugging
ENABLE_API_DOCS=true
ENABLE_DEV_TOOLS=true
ENABLE_RATE_LIMITING=false
